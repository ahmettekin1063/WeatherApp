<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_graph"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.ahmettekin.weatherappkotlin.view.ListFragment"
        android:label="fragment_list"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_cityDetailsFragment"
            app:destination="@id/cityDetailsFragment"
            app:launchSingleTop="false"
            app:popUpTo="@id/listFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/cityDetailsFragment"
        android:name="com.ahmettekin.weatherappkotlin.view.CityDetailsFragment"
        android:label="city_details_fragment"
        tools:layout="@layout/city_details_fragment" >
        <action
            android:id="@+id/action_cityDetailsFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:launchSingleTop="false"
            app:popUpTo="@id/cityDetailsFragment"
            app:popUpToInclusive="false" />
        <argument
            android:name="name"
            app:argType="string" />
        <argument
            android:name="feels_like"
            app:argType="float" />
        <argument
            android:name="nem"
            app:argType="integer" />
        <argument
            android:name="temp"
            app:argType="float" />
        <argument
            android:name="lon"
            app:argType="float" />
        <argument
            android:name="lat"
            app:argType="float" />
    </fragment>
</navigation>