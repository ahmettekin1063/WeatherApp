<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_graph"
    app:startDestination="@id/listFragment">
    <fragment
        android:id="@+id/listFragment"
        android:name="com.ahmettekin.WeatherApp.view.ListFragment"
        android:label="ListFragment" >
        <action
            android:id="@+id/action_listFragment_to_allCityListFragment"
            app:destination="@id/allCityListFragment" />
    </fragment>
    <fragment
        android:id="@+id/allCityListFragment"
        android:name="com.ahmettekin.WeatherApp.view.AllCityListFragment"
        android:label="fragment_all_city_list"
        tools:layout="@layout/fragment_all_city_list" >
        <action
            android:id="@+id/action_allCityListFragment_to_listFragment"
            app:destination="@id/listFragment" />
    </fragment>
</navigation>